# WebRTC Platform Environment Configuration
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN=webrtc.local
EXTERNAL_IP=127.0.0.1

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_DATABASE=webrtc_platform
MYSQL_USER=webrtc_user
MYSQL_PASSWORD=secure_password_change_me

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-me

# FreeSWITCH Configuration
ESL_PASSWORD=ClueCon

# API Configuration
API_URL=http://localhost:3001/api
WSS_URL=wss://localhost:7443

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/private.key

# Production Settings
NODE_ENV=development
LOG_LEVEL=debug

# TURN Server Configuration (optional)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_PASSWORD=password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook URLs (for integrations)
WEBHOOK_URL_CALL_EVENTS=https://your-domain.com/webhooks/call-events
